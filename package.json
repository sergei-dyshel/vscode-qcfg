{
  "name": "vscode-qcfg",
  "displayName": "vscode-qcfg",
  "description": "My personal extension",
  "version": "0.0.1",
  "publisher": "QyRoN",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergei-dyshel/qyron-config.git"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "qcfg.selection.expand",
        "title": "qcfg: Expand selection"
      },
      {
        "command": "qcfg.selection.shrink",
        "title": "qcfg: Shrink selection"
      },
      {
        "command": "qcfg.selection.right",
        "title": "qcfg: Shrink selection"
      },
      {
        "command": "qcfg.alternate.switch",
        "title": "qcfg: Switch to alternate file"
      },
      {
        "command": "qcfg.sayHello",
        "title": "qcfg: Hello World"
      },
      {
        "command": "qcfg.selectLines",
        "title": "qcfg: Select lines"
      },
      {
        "command": "qcfg.swapCursorAndAnchor",
        "title": "qcfg: Swap cursor and anchor"
      },
      {
        "command": "qcfg.cloneEditorBeside",
        "title": "qcfg: Clone editor to side"
      },
      {
        "command": "qcfg.smartPaste",
        "title": "qcfg: Smart paste"
      },
      {
        "command": "qcfg.surroundWith",
        "title": "qcfg: Surround text with..."
      },
      {
        "command": "qcfg.autoSync.toggle",
        "title": "qcfg: AutoSync toggle"
      },
      {
        "command": "qcfg.navigateBackToPreviousFile",
        "title": "qcfg: Navigate back to previous file"
      },
      {
        "command": "qcfg.test",
        "title": "qcfg: Test"
      }
    ],
    "configuration": {
      "title": "Qcfg configuration",
      "properties": {
        "qcfg.tasks": {
          "type": "object",
          "description": "Global tasks",
          "$ref": "vscode://schemas/tasks"
        },
        "qcfg.alternate.mapping": {
          "type": "object",
          "description": "Mapping for alternate (header/source)",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "qcfg.tasks.global": {
          "type": "object",
          "description": "Tasks in qcfg format",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string"
              },
              "reveal": {
                "type": "string",
                "enum": [
                  "focus",
                  "yes",
                  "no"
                ],
                "default": "yes"
              },
              "onSuccess": {
                "type": "string",
                "default": "auto",
                "enum": [
                  "none",
                  "auto",
                  "hide",
                  "dispose",
                  "show",
                  "notify"
                ]
              },
              "onFailure": {
                "type": "string",
                "default": "auto",
                "enum": [
                  "none",
                  "auto",
                  "hide",
                  "dispose",
                  "show",
                  "notify"
                ]
              },
              "reindex": {
                "type": "boolean",
                "default": false
              },
              "build": {
                "type": "boolean",
                "default": false
              },
              "problemMatchers": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": [
              "command"
            ]
          }
        },
        "qcfg.tasks.workspace": {
          "type": "object",
          "description": "Tasks in qcfg format",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string"
              },
              "reveal": {
                "type": "string",
                "enum": [
                  "focus",
                  "yes",
                  "no"
                ],
                "default": "yes"
              },
              "onSuccess": {
                "type": "string",
                "default": "auto",
                "enum": [
                  "none",
                  "auto",
                  "hide",
                  "dispose",
                  "show",
                  "notify"
                ]
              },
              "onFailure": {
                "type": "string",
                "default": "auto",
                "enum": [
                  "none",
                  "auto",
                  "hide",
                  "dispose",
                  "show",
                  "notify"
                ]
              },
              "reindex": {
                "type": "boolean",
                "default": false
              },
              "build": {
                "type": "boolean",
                "default": false
              },
              "problemMatchers": {
                "anyOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "default": []
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            "required": [
              "command"
            ]
          }
        },
        "qcfg.autoSync.enabled": {
          "type": "boolean",
          "description": "AutoSync enabled on start",
          "default": false
        },
        "qcfg.autoSync.command": {
          "type": "string",
          "description": "AutoSync command"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "qcfg",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "qcfg tasks"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "e8build",
        "owner": "qcfg",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*?):(\\d+):((\\d+):)?\\s+(fatal error|warning|error|note):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 4,
          "severity": 5,
          "message": 6
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "check": "gts check",
    "clean": "gts clean",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "dependencies": {
    "clipboardy": "^1.2.3",
    "superstring": "^2.3.4",
    "tree-sitter": "^0.13.16",
    "tree-sitter-python": "^0.13.4",
    "tree-sitter-cpp": "^0.13.8",
    "tree-sitter-typescript": "^0.13.6",
    "typescript-collections": "^1.1.4"
  },
  "devDependencies": {
    "@types/clipboardy": "^1.1.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "gts": "^0.8.0",
    "tslint": "^5.8.0",
    "typescript": "~2.8.0",
    "vscode": "^1.1.21",
    "vscode-languageclient": "^5.1.1",
    "vscode-languageserver": "^5.1.0"
  }
}
