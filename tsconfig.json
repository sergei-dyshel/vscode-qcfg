{
  "compilerOptions": {
    // https://stackoverflow.com/questions/59787574/typescript-tsconfig-settings-for-node-js-12/59787575#59787575
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "out",
    "lib": ["es2023"],
    // TODO: try to remove in future versions
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true, // needed for webpack
    "allowSyntheticDefaultImports": true, // needed for webpack
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "vscode.proposed.*.d.ts", "webpack.config.ts"]
}
