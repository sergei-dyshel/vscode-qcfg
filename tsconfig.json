{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"lib": [ "es2018" ],
		"sourceMap": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true, // needed for webpack
		"allowSyntheticDefaultImports": true, // needed for webpack
		"strict": true,
		"noImplicitReturns": true
	},
	"exclude": [
		"node_modules",
		"server"
	]
}
