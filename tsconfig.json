{
  "compilerOptions": {
    // https://stackoverflow.com/questions/59787574/typescript-tsconfig-settings-for-node-js-12/59787575#59787575
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "lib": ["es2020"],
    "sourceMap": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true, // needed for webpack
    "allowSyntheticDefaultImports": true, // needed for webpack
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "exclude": ["webpack.config.js", "node_modules", "server"]
}
