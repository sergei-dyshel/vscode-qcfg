{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": {
    "anyOf": [
      {
        "$ref": "#/definitions/Params"
      },
      {
        "type": "string"
      }
    ]
  },
  "definitions": {
    "BaseProcessTaskFlag": {
      "anyOf": [
        {
          "$ref": "#/definitions/Flag.BUILD"
        },
        {
          "$ref": "#/definitions/Flag.FOLDER"
        },
        {
          "$ref": "#/definitions/Flag.HIDDEN"
        }
      ]
    },
    "EndAction": {
      "enum": [
        "none",
        "auto",
        "hide",
        "dispose",
        "show",
        "notify"
      ],
      "type": "string"
    },
    "Flag": {
      "enum": [
        "dedicatedPanel",
        "clear",
        "autoRestart",
        "reindex",
        "build",
        "hidden",
        "folder"
      ],
      "type": "string"
    },
    "Flag.AUTO_RESTART": {
      "enum": [
        "autoRestart"
      ],
      "type": "string"
    },
    "Flag.BUILD": {
      "enum": [
        "build"
      ],
      "type": "string"
    },
    "Flag.CLEAR": {
      "enum": [
        "clear"
      ],
      "type": "string"
    },
    "Flag.DEDICATED_PANEL": {
      "enum": [
        "dedicatedPanel"
      ],
      "type": "string"
    },
    "Flag.FOLDER": {
      "description": "Task applies to any workspace folder (i.e. not current dir/file)",
      "enum": [
        "folder"
      ],
      "type": "string"
    },
    "Flag.HIDDEN": {
      "description": "Task is hidden when from pick list, i.e. can be run only directly",
      "enum": [
        "hidden"
      ],
      "type": "string"
    },
    "Flag.REINDEX": {
      "enum": [
        "reindex"
      ],
      "type": "string"
    },
    "LocationFormat": {
      "enum": [
        "vimgrep",
        "gtags"
      ],
      "type": "string"
    },
    "Params": {
      "anyOf": [
        {
          "$ref": "#/definitions/TerminalTaskParams"
        },
        {
          "$ref": "#/definitions/ProcessTaskParams"
        }
      ]
    },
    "ParseOutput": {
      "additionalProperties": false,
      "properties": {
        "format": {
          "$ref": "#/definitions/LocationFormat"
        },
        "tag": {
          "type": "string"
        }
      },
      "required": [
        "format"
      ],
      "type": "object"
    },
    "ProcessTaskParams": {
      "additionalProperties": false,
      "properties": {
        "command": {
          "type": "string"
        },
        "cwd": {
          "type": "string"
        },
        "exitCodes": {
          "default": [
          ],
          "description": "Expected process exit codes",
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        "flags": {
          "items": {
            "$ref": "#/definitions/BaseProcessTaskFlag"
          },
          "type": "array"
        },
        "parseOutput": {
          "$ref": "#/definitions/ParseOutput",
          "description": "Extract locations from output using predefined format or custom regular expression"
        },
        "title": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/TaskType.PROCESS"
        },
        "when": {
          "$ref": "#/definitions/When"
        }
      },
      "required": [
        "command",
        "type"
      ],
      "type": "object"
    },
    "Reveal": {
      "enum": [
        "focus",
        "yes",
        "no"
      ],
      "type": "string"
    },
    "TaskType": {
      "enum": [
        "process",
        "terminal",
        "search"
      ],
      "type": "string"
    },
    "TaskType.PROCESS": {
      "enum": [
        "process"
      ],
      "type": "string"
    },
    "TaskType.TERMINAL": {
      "enum": [
        "terminal"
      ],
      "type": "string"
    },
    "TerminalTaskParams": {
      "additionalProperties": false,
      "properties": {
        "command": {
          "type": "string"
        },
        "cwd": {
          "type": "string"
        },
        "exitCodes": {
          "default": [
          ],
          "description": "Expected process exit codes",
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        "flags": {
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/BaseProcessTaskFlag"
              },
              {
                "$ref": "#/definitions/Flag.CLEAR"
              },
              {
                "$ref": "#/definitions/Flag.DEDICATED_PANEL"
              },
              {
                "$ref": "#/definitions/Flag.REINDEX"
              },
              {
                "$ref": "#/definitions/Flag.AUTO_RESTART"
              }
            ]
          },
          "type": "array"
        },
        "onFailure": {
          "$ref": "#/definitions/EndAction"
        },
        "onSuccess": {
          "$ref": "#/definitions/EndAction"
        },
        "problemMatchers": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ]
        },
        "reindex": {
          "type": "boolean"
        },
        "reveal": {
          "$ref": "#/definitions/Reveal",
          "default": "focus",
          "description": "Reveal terminal when running"
        },
        "title": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/TaskType.TERMINAL"
        },
        "when": {
          "$ref": "#/definitions/When"
        }
      },
      "required": [
        "command",
        "type"
      ],
      "type": "object"
    },
    "When": {
      "additionalProperties": false,
      "properties": {
        "fileExists": {
          "type": "string"
        },
        "fileMatches": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "type": "object"
}