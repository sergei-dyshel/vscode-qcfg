// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/extension/extension.js"],
      // "preLaunchTask": "npm: build-dev",
      "skipFiles": ["<node_internals>/**/*.js", "**/node_modules/**/*.js"],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Run CLI",
      "type": "node",
      "request": "launch",
      "outFiles": ["${workspaceFolder}/dist/remoteCli.js"],
      "args": [
        "${workspaceFolder}/dist/remoteCli.js",
        "open",
        "-f",
        "src/lego/lego-flusher-module-error-injection.cpp:40"
      ],
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
