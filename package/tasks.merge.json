{
    "contributes": {
        "commands": [
            {
                "command": "qcfg.tasks.show",
                "title": "qcfg: Show list of tasks"
            },
            {
                "command": "qcfg.tasks.runQcfg",
                "title": "qcfg: Run specific task"
            },
            {
                "command": "qcfg.tasks.build.last",
                "title": "qcfg: Run last build task"
            },
            {
                "command": "qcfg.tasks.build.default",
                "title": "qcfg: Run default build task"
            }
        ],
        "configuration": {
            "properties": {
                "qcfg.tasks.global": {
                    "$import": "tasks.base.json#/contributes/configuration/properties/qcfg.tasks"
                },
                "qcfg.tasks.workspace": {
                    "$import": "tasks.base.json#/contributes/configuration/properties/qcfg.tasks"
                }
            }
        },
        "keybindings": [
            {
                "key": "alt+t",
                "command": "qcfg.tasks.show"
            },
            {
                "key": "ctrl+k ctrl+b",
                "command": "qcfg.tasks.build.last"
            },
            {
                "key": "ctrl+k ctrl+shift+b",
                "command": "qcfg.tasks.build.default"
            },
            {
                "key": "alt+s",
                "command": "qcfg.tasks.runQcfg",
                "args": "syg"
            },
            {
                "key": "alt+l",
                "command": "qcfg.tasks.runQcfg",
                "args": "jump2line"
            },
            {
                "key": "alt+g",
                "command": "qcfg.tasks.runQcfg",
                "args": "gtags_cursor"
            },
            {
                "key": "ctrl+k ctrl+g",
                "command": "qcfg.tasks.runQcfg",
                "args": "gtags"
            },
            {
                "key": "alt+.",
                "command": "qcfg.tasks.runQcfg",
                "args": "rg_word"
            }
        ]
    }
}